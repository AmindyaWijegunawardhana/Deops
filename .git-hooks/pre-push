#!/usr/bin/env bash
# Pre-push hook - Run before pushing to remote
# Validates build and tests

set -e

echo "üöÄ Running pre-push checks..."

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

BRANCH=$(git rev-parse --abbrev-ref HEAD)
EXIT_CODE=0

# Don't run checks on main/master branch (handled by CI)
if [[ "$BRANCH" == "main" || "$BRANCH" == "master" ]]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Skipping pre-push checks on $BRANCH (handled by CI)${NC}"
    exit 0
fi

# 1. Check if branch has commits not in upstream
echo "üîç Checking for commits to push..."
COMMITS=$(git rev-list --count origin/$BRANCH..HEAD 2>/dev/null || echo "0")

if [ "$COMMITS" -eq 0 ]; then
    echo -e "${YELLOW}‚ÑπÔ∏è  No commits to push${NC}"
    exit 0
fi

# 2. Run backend tests (if Node.js files changed)
echo "üîç Checking for backend changes..."
if git diff HEAD origin/$BRANCH --name-only 2>/dev/null | grep -q "^backend/"; then
    echo "üß™ Running backend tests..."
    if [ -f "backend/package.json" ]; then
        cd backend
        if [ -f "test-api.js" ]; then
            if ! node test-api.js 2>/dev/null; then
                echo -e "${RED}‚ùå Backend tests failed${NC}"
                EXIT_CODE=1
            else
                echo -e "${GREEN}‚úÖ Backend tests passed${NC}"
            fi
        fi
        cd ..
    fi
fi

# 3. Run frontend build check
echo "üîç Checking for frontend changes..."
if git diff HEAD origin/$BRANCH --name-only 2>/dev/null | grep -q "^frontend/src/"; then
    echo "üî® Checking frontend build..."
    if [ -f "frontend/package.json" ]; then
        cd frontend
        if npm run build --dry-run 2>/dev/null | grep -q "error\|Error"; then
            echo -e "${RED}‚ùå Frontend build check failed${NC}"
            EXIT_CODE=1
        else
            echo -e "${GREEN}‚úÖ Frontend build check passed${NC}"
        fi
        cd ..
    fi
fi

if [ $EXIT_CODE -eq 0 ]; then
    echo -e "${GREEN}‚úÖ All pre-push checks passed!${NC}"
else
    echo -e "${RED}‚ùå Pre-push checks failed!${NC}"
    echo "Push aborted. Fix issues and try again."
fi

exit $EXIT_CODE
